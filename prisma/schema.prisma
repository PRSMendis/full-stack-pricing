// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    sku            String           @id @unique
    name           String
    quantity       Int
    brand          String
    categoryId     String
    subCategoryId  String
    segmentId      String
    price          Float
    createdAt      DateTime         @default(now())
    updatedAt      DateTime         @updatedAt
    // TODO: Add batch creation time, expiry date
    AmendedProduct AmendedProduct[]
}

model Supplier {
    id              String           @id @unique
    name            String
    contactInfo     String?
    amendedProducts AmendedProduct[]
    // TODO: here should be a pricing model type, that can be an array
    // pricingModel PrincingModel[], each pricing model should be an array of amendedProducts
}

model AmendedProduct {
    id             Int      @id @default(autoincrement())
    productSku     String
    supplierId     String
    Product        Product  @relation(fields: [productSku], references: [sku])
    Supplier       Supplier @relation(fields: [supplierId], references: [id])
    isAmended      Boolean  @default(false)
    isAbsolute     Boolean?
    amendmentValue Float    @default(0)
    createdAt      DateTime @default(now())
    updatedAt      DateTime @updatedAt

    @@unique([productSku, supplierId])
}
